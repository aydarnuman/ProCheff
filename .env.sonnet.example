# Environment Configuration for Sonnet Integration
# Bu dosya production deployment için gerekli environment variable'ları tanımlar

# Sonnet API Configuration (Sonnet ekibi tarafından sağlanacak)
SONNET_API_KEY=your_sonnet_api_key_here
SONNET_API_URL=https://api.sonnet.ai/v1
SONNET_TIMEOUT_MS=30000

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/dbname
DATABASE_POOL_SIZE=10

# GCS Configuration for Document Storage
GCS_BUCKET_NAME=procheff-specifications-prod
GCS_PROJECT_ID=procheff-production
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Authentication & Security
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://procheff.app

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Monitoring & Alerting
ENABLE_PERFORMANCE_MONITORING=true
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Feature Flags
ENABLE_SONNET_EXTRACTION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_AUTO_APPROVAL=true
AUTO_APPROVAL_CONFIDENCE_THRESHOLD=0.90

# Performance Tuning
MAX_CONCURRENT_EXTRACTIONS=5
EXTRACTION_QUEUE_TIMEOUT_MS=300000
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_MS=1000

# Development/Testing
NODE_ENV=production
ENABLE_DEBUG_LOGGING=false
MOCK_SONNET_RESPONSES=false
TEST_MODE=false