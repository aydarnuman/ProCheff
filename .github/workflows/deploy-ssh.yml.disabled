jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Upload app to server
        uses: appleboy/scp-action@v0.1.7
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USER }}
          key: ${{ secrets.SSH_KEY }}
          port: ${{ secrets.SSH_PORT }}
          source: "ProCheff/**"
          target: ${{ secrets.DEPLOY_PATH }}
          rm: true

      - name: Build and run container on server
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USER }}
          key: ${{ secrets.SSH_KEY }}
          port: ${{ secrets.SSH_PORT }}
          script: |
            set -e
            cd ${{ secrets.DEPLOY_PATH }}/ProCheff
            # Build Docker image
            docker build -t procheff:latest .
            # Restart container
            docker rm -f procheff || true
            docker run -d --name procheff \
              -p 80:3000 \
              -e GEMINI_API_KEY=${{ secrets.GEMINI_API_KEY }} \
              procheff:latest
